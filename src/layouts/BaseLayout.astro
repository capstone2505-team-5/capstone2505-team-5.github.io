---
import '../styles/global.css';
import MediaModal from '../components/MediaModal.astro';

export interface Props {
	title?: string;
}

const { title = "LLMonade" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/Updated OG Symbol.svg" />
		<title>{title}</title>
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://llmonade.github.io/" />
		<meta property="og:title" content="LLMonade - AI Evaluation Made Simple" />
		<meta property="og:description" content="A refreshingly simple process to evaluate and improve your LLM-powered applications. Follow proven best practices for manual error analysis with our guided workflow." />
		<meta property="og:image" content="https://llmonade.github.io/images/llmonade-home.png" />
		<meta property="og:image:width" content="923" />
		<meta property="og:image:height" content="456" />
		<meta property="og:image:alt" content="LLMonade Logo - AI Evaluation Platform" />
		
	</head>
	<body>
		<slot />
		<MediaModal />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
