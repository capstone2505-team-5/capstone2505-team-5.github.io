---
import '../styles/global.css';
import ogSymbolWhite from '../../public/images/Updated OG Symbol White.svg';

export interface Props {
	title?: string;
}

const { title = "LLMonade" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={ogSymbolWhite.src} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
