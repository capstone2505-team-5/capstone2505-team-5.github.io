---
import '../styles/global.css';
import MediaModal from '../components/MediaModal.astro';

export interface Props {
	title?: string;
}

const { title = "LLMonade" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/Updated OG Symbol.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<MediaModal />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
